@model TaskManager.Models.Task

@using (Ajax.BeginForm("Create", "Task", new AjaxOptions { OnSuccess = "formNewTask_OnSuccess" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Create A Task</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsCompleted)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsCompleted)
            @Html.ValidationMessageFor(model => model.IsCompleted)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}